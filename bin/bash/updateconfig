#!bin/bash
docker cp ./bin/application/etc/nginx/magento.conf $(docker-compose ps -q application):/etc/nginx/conf.d/magento.conf
docker cp ./bin/application/etc/php/www.conf $(docker-compose ps -q application):/etc/php/7.2/fpm/pool.d/www.conf
echo "Copy configuration is successfuly."
sh ./bin/bash/command service nginx restart
sh ./bin/bash/command service php7.2-fpm restart
echo "Reload configuration is successfuly."